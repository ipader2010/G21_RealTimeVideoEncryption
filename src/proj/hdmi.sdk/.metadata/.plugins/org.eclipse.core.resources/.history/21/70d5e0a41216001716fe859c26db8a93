#ifndef CONSTANTS_H_
#define CONSTANTS_H_

#define POINT_NUM 0

#define W_EN_FRAME_COUNTER 1
#define R_EN_FRAME_COUNTER 1

#define H_INPUT 1280 * 3
#define V_INPUT 4
#define STRIDE_INPUT H_INPUT
#define OFFSET_READ 1280 * 3
#define OFFSET_WRITE OFFSET_READ

#define OFFSET_READ_DEC 1280 * 3
#define OFFSET_WRITE_DEC OFFSET_READ_DEC

#define LOOP (1280 * 3 * 720) / (H_INPUT * V_INPUT)

#define OFFSET_VER	H_INPUT * V_INPUT
#define LOOP_OFF (1280 * 3 * 720) / OFFSET_READ_DEC

#endif /* CONSTANTS_H_ */
