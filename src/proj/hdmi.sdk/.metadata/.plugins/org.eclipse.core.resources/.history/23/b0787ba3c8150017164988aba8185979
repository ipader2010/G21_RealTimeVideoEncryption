#ifndef CONSTANTS_H_
#define CONSTANTS_H_

#define POINT_NUM 0

#define W_EN_FRAME_COUNTER 1
#define R_EN_FRAME_COUNTER 1

#define H_INPUT 1920 * 3 * 4
#define V_INPUT 1
#define STRIDE_INPUT H_INPUT

#define OFFSET_READ 1920 * 3
#define OFFSET_WRITE OFFSET_READ

#define OFFSET_READ_DEC 1920 * 3 * 4
#define OFFSET_WRITE_DEC OFFSET_READ_DEC

#define LOOP (1920 * 3 * 1080) / (H_INPUT * V_INPUT)
#define LOOP_OFF (1920 * 3 * 1080) / OFFSET_READ_DEC

#endif /* CONSTANTS_H_ */
